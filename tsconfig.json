{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es6",
        "target": "es6",
        "allowJs": false,
        "removeComments": true,
        "moduleResolution": "node",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2018", "dom"],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "types": ["jest", "node"],
        "typeRoots": ["src", "node_modules/@types"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
